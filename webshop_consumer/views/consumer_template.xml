<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="add_consumer" name="New Customer" page="True">
            <t t-call="website.layout">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="col-md-8 col-sm-8" />
                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <form t-att-action="'/reseller/%s/consumer' % reseller.id" method="post" class="col-md-4 col-sm-4 col-xs-12">
                            <div t-att-class="'form-group %s' %validation.get('first_name')">
                                <label class="col-md-3 col-sm-4 control-label" for="first_name">First name</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control" name="first_name" placeholder="First name" />
                                    <small t-esc="help.get('first_name', '')" />
                                </div>
                            </div>
                            <div t-att-class="'form-group %s' %validation.get('last_name')">
                                <label class="col-md-3 col-sm-4 control-label" for="last_name">Last name</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control" name="last_name" placeholder="Last name" />
                                    <small t-esc="help.get('last_name', '')" />
                                </div>
                            </div>
                            <div t-att-class="'form-group %s' %validation.get('address')">
                                <label class="col-md-3 col-sm-4 control-label" for="address">Address</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control" name="address" placeholder="Address" />
                                    <small t-esc="help.get('address', '')" />
                                </div>
                            </div>
                            <div t-att-class="'form-group %s' %validation.get('email')">
                                <label class="col-md-3 col-sm-4 control-label" for="email">E-mail</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control" name="email" placeholder="E-mail" />
                                    <small t-esc="help.get('email', '')" />
                                </div>
                            </div>
                            <input name="view" value="map" type="hidden" />
                            <button class="mt16 dn_btn dn_primary" type="submit">
                                <i class="fa fa-map-marker" />
                            </button>
                        </form>
                    </div>
                </div>
            </t>
        </template>
