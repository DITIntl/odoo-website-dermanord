<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <t t-name="ingredient_slide_indicators">
        <li t-att-class="indicator" t-att-data-slide-to="slide_nr" data-cke-saved-data-target="#ingredient_slide"/>
    </t>
    
    <t t-name="ingredient_slide_content">
        <a t-att-href="'/product_ingredients/ingredient/%s' % id">
            <div t-att-class="item_content" style="">
                <img class="img-responsive" t-att-src="image" t-att-data-cke-saved-src="image" style="position: relative; width:100%; height: auto !important;"/>
                 <div class="container" style="position: absolute; top: 10%; left: 0;">
                    <div class="row content">
                        <div class="col-md-12 col-sm-12">
                            <h4 class="mb16 dn_uppercase" style="max-width: 100%;"><t t-esc="name"/></h4>
                            <h5 class="mb16"><t t-esc="description"/></h5>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </t>
    
</templates>
