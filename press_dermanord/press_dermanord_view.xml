            <div id="press_release_block" class="container mt16 mb16 c_bord">
                <h3 class="text-center">Press Releases</h3>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2" t-ignore="True" id="main_column">
                        <div t-if="not press_blog_post" class="container mb64">
                            <p class="css_editable_hidden">
                                <h1>No blog post yet.</h1>
                            </p>
                            <p groups="base.group_document_user">Click on "Content" on the top menu to write your first blog post.</p>
                        </div>
                        <div t-foreach="press_blog_post" t-as="bp" class="mb32">
                            <span t-field="bp.author_avatar" t-field-options="{&quot;widget&quot;: &quot;image&quot;, &quot;class&quot;: &quot;img-circle pull-right mt16 media-object&quot;}" />
                            <a t-attf-href="/blog/#{ slug(bp.blog_id) }/post/#{ slug(bp) }">
                                <h3 t-field="bp.name" class="mb4" />
                            </a>
                            <div class="text-muted">
                                <h4 t-field="bp.subtitle" class="mb4 mt4" />
                                <div name="blog_post_data" class="mb0">
                                    <span t-field="bp.author_id" style="display: inline-block;" t-field-options="{                                 &quot;widget&quot;: &quot;contact&quot;,                                 &quot;fields&quot;: [&quot;name&quot;]                             }" />
                                    <span t-field="bp.create_date" t-field-options="{&quot;format&quot;: &quot;MMMM yyyy&quot;}" />
                                    <span t-if="len(bp.message_ids) &gt; 0">
                                        <t t-esc="len(bp.message_ids)" />
                                        <t t-if="len(bp.message_ids) &lt;= 1">comment</t>
                                        <t t-if="len(bp.message_ids) &gt; 1">comments</t>
                                    </span>
                                    <span t-if="not bp.website_published" class="label label-danger">not published</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="oe_structure" />
        </template>
