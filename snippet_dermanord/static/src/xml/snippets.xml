<?xml version="1.0" encoding="UTF-8"?>
<!-- vim:fdl=1:
-->
<templates id="template" xml:space="preserve">
    <t t-name="blog_banner_content">
        <div t-att-class="item_content">
            <img class="img-responsive blog_banner_img" t-att-src="background_image" t-att-data-cke-saved-src="background_image"/>
             <div class="container">
                <div class="row content">
                    <div class="col-md-12 col-sm-12 text-center">
                        <h6 class="mb32"><i><t t-esc="blog_name"/></i></h6>
                        <p>
                            <a class="dn_btn dn_primary" href="/page/experiences">DISCOVER MORE</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </t>
    <t t-name="p_category_snippet">
        <a href="/webshop/category/category_id">
            <div class="categ_block col-md-4 col-xs-12">
                <img class="img img-responsive categ_block_img" t-att-src="category_image" t-att-data-cke-saved-src="category_image"/>
                 <div class="container">
                    <h2 class="categ_block_text dn_uppercase"><t t-esc="category_name"/></h2>
                </div>
            </div>
        </a>
    </t>
    <t t-name="product_highlights_snippet">
        <a t-att-href="ph_url">
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="ph_block">
                    <div class="ribbon-wrapper">
                        <div t-if="oe_ribbon_promo" class="ribbon ribbon_news btn btn-primary">New</div>
                        <div t-if="oe_ribbon_limited" class="ribbon ribbon_limited btn btn-primary">Limited<br/>Edition</div>
                    </div>
                    <div class="offer-wrapper">
                        <div t-if="oe_ribbon_offer" class="ribbon ribbon_offer btn btn-primary">Offer</div>
                    </div>
                    <img class="img img-responsive ph_img" t-att-src="ph_image" t-att-data-cke-saved-src="ph_image"/>
                    <div class="container desc_div">
                        <h4 class="dn_uppercase"><t t-esc="ph_name"/></h4>
                        <p class="ph_desc text-muted"><t t-esc="ph_description"/></p>
                    </div>
                </div>
            </div>
        </a>
    </t>
</templates>

