<?xml version="1.0" encoding="UTF-8"?>
<!-- vim:fdl=1:
-->
<templates id="template" xml:space="preserve">
    <t t-name="blog_banner_content">
        <div t-att-class="item_content">
            <img class="img-responsive blog_banner_img" t-att-src="background_image" t-att-data-cke-saved-src="background_image"/>
             <div class="container">
                <div class="row content">
                    <div class="col-md-12 col-sm-12 text-center">
                        <h6 class="mb32"><i><t t-esc="blog_name"/></i></h6>
                        <p>
                            <a class="dn_btn dn_primary" href="/page/experiences">DISCOVER MORE</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </t>
    <t t-name="sale_promotions_indicators">
        <li t-att-class="indicator" t-att-data-slide-to="slide_nr" data-cke-saved-data-target="#sale_promotions"/>
    </t>
    <t t-name="sale_promotions_content">
        <div t-att-class="item_content">
            <a t-att-href="sp_url">
                <img class="img-responsive sale_promotions_img" t-att-src="background_image" t-att-data-cke-saved-src="background_image"/>
                 <div class="container">
                    <div class="row content">
                        <div class="sale_promotions_text">
                            <h4 class="mb16 dn_uppercase"><t t-esc="sp_name"/></h4>
                            <h5 class="mb16"><t t-esc="sp_description"/></h5>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </t>
    <t t-name="p_category_snippet">
        <a href="/dn_shop/category/category_id">
            <div class="categ_block col-md-4 col-xs-12">
                <img class="img img-responsive categ_block_img" t-att-src="category_image" t-att-data-cke-saved-src="category_image"/>
                 <div class="container">
                    <h3 class="categ_block_text dn_uppercase"><t t-esc="category_name"/></h3>
                </div>
            </div>
        </a>
    </t>
    <t t-name="product_highlights_snippet">
        <a href="product_highlight_link">
            <div class="ph_block col-md-3 col-xs-12">
                <img class="img img-responsive ph_img" t-att-src="ph_image" t-att-data-cke-saved-src="ph_image"/>
                <div class="container desc_div">
                    <h4 class="dn_uppercase"><t t-esc="ph_name"/></h4>
                    <h5 class="ph_desc text-muted"><t t-esc="ph_description"/></h5>
                </div>
            </div>
        </a>
    </t>
</templates>

