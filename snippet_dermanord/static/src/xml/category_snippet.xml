-->
<templates id="template" xml:space="preserve">
    <t t-name="blog_banner_indicators">
        <li t-att-class="indicator" t-att-data-slide-to="slid_nr" data-target="blog_carousel"/>
    </t>
    <t t-name="blog_banner_content">
        <div t-att-class="item_content" style="">
            <img class="img-responsive" t-att-src="background_image" t-att-data-cke-saved-src="background_image" style="position: relative;"/>
             <div class="container" style="position: absolute; top: 10%; left: 0%;">
                <div class="row content">
                    <div class="col-md-12 col-sm-12 text-center">
                        <h3 class="mb32"><t t-esc="blog_name"/></h3>
                        <p>
                            <a class="dn_btn dn_primary" href="/">DISCOVER MORE</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </t>
    <t t-name="p_category_snippet">
        <a href="/shop/category/category_id">
            <div class="col-xs-12 categ_block" style="">
                <img class="img img-responsive categ_block_img" t-att-src="category_image" t-att-data-cke-saved-src="category_image" style="position: relative;"/>
                 <div class="container" style="position: absolute; top: 50%; left: 10%;">
                    <h2 class="categ_block_text" style="margin: 0px;"><t t-esc="category_name"/></h2>
                </div>
            </div>
        </a>
    </t>
</templates>

