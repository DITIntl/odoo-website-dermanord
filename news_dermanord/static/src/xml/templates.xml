<?xml version="1.0" encoding="UTF-8"?>
<!-- vim:fdl=1:
-->
<templates id="template" xml:space="preserve">
    <t t-name="blog_post_item">
        <div class="col-md-offset-2 col-sm-offset-2 col-md-10 col-sm-10 col-xs-12">
            <div class="col-md-6 col-sm-6 col-xs-12 mt16 mb16 blog_background_image_list" t-att-style="background_image_css"/>
            <div class="col-md-6 col-sm-6 col-xs-12 mt16 mb16 blog_content_div">
                <h6 style="font-size: 28px; font-weight: 500; padding-top: 0px; margin-top: 0px;"><t t-esc="post_name"/></h6>
                <h5 class="text-muted" style="color: #bbb;"><t t-esc="write_date"/></h5>
                <p class="text-muted mt16 dn_blog_subtitle"><t t-esc="post_subtitle"/></p>
                <a t-att-href="post_url"><i style="font-size: 20px; text-decoration: underline; color: #000;"><t t-esc="str_read_more"/></i></a>
                <div class="blog_tag_div">
                    <p class="dn_uppercase blog_content_tag"><t t-esc="str_tags"/></p>
                    <t t-raw="tags_html"/>
                </div>
            </div>
        </div>
    </t>
</templates>

