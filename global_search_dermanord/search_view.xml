        </template>

        <template id="search_layout" inherit_id="website.layout">
            <xpath expr="//div[@id='wrapwrap']" position="before">
                <div id="search_modal" class="modal fade" role="dialog">
                    <div class="modal-dialog" style="margin: 0px;">
                        <div class="modal-content">
                            <div class="modal-header hidden">
                            </div>
                            <div class="modal-body" style="padding: 0px;">
                                <form action="/shop" method="get">
                                    <div class="input-group add-on">
                                        <input class="form-control" name="search" placeholder="Search..." type="text"/>
                                        <input type="submit" value="Submit" class="hidden"/>
                                        <div class="input-group-btn">
                                            <button class="btn btn-default" data-dismiss="modal"><i class="glyphicon glyphicon-remove"/>
                                            </button>
                                        </div>
                                        <script>
                                            document.getElementById('search').addEventListener('keypress', function(event) {
                                                if (event.keyCode == 13) {
                                                    event.preventDefault();
                                                }
                                            });
                                        </script>
                                    </div>
                                </form>
<!--
                                <div id="searchbox" class="open">
                                    <ul class="dropdown-menu" style="width: 100%; margin: 0px; padding: 0px 15px;">
