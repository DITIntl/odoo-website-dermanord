            <xpath expr="//div[@id='search_div']/div[@class='hidden-lg hidden-md hidden-sm']" position="replace">
                <div class="hidden-lg hidden-md hidden-sm">
                    <i id="search-btn-modal" data-toggle="modal" data-target="#search_modal" class="fa fa-search fa-2x"/>
                </div>
            </xpath>
